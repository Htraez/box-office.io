<div class="popup-area" id='login-popup' style='display: none;z-index: 999;'>
    <div class="popup-window" style='max-width: 70%;'>
        <div class="popup-head">
            <span id='popup-head-text'>Membership</span>
            <span id='popup-close'><i class="fas fa-times"></i></span>
        </div>
        <div class="popup-body" style='overflow: unset;'>
            <form action="/login" method="POST">
                <div class="form-group">
                    <label for="login-username">Username</label>
                    <input class="form-control" type="text" id='login-username' name='username'>
                </div>
                
                <div class="form-group">
                    <label for="login-password">Password</label>
                    <input class="form-control" type="password" id='login-password' name='password'>
                </div>
                <button type='submit' value='Log In' class="btn-center btn-white" style='margin:auto;'>Login</button>
            </form>
        </div>
        <div class="popup-footer">
            <button class="btn-center btn-white" data-popup='signup-popup' style="height:25px; padding-top:0; padding-bottom:0;">Sign-up</button>
        </div>
    </div>    
</div>
<div class="popup-area" id='buy-ticket-popup' style='display: none;'>
    <div class="popup-window col-xs-12 col-md-8">
        <div class="popup-head">
            <span id='popup-head-text'>Ticket Reservation</span>
            <span id='popup-close'><i class="fas fa-times"></i></span>
        </div>
        <div class="popup-body" style="flex-basis: auto;max-height: 80vh;overflow-y: visible;">  
            <%- include form-reserve %>
        </div>
        <div class="popup-footer" style='justify-content: space-between;height: fit-content;'>
            
        </div>
    </div>    
</div>

